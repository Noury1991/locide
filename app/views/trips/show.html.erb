<div class="trip-container">
    <div class="card-div">
        <%= image_tag  "person-1.jpg", class:"profile-image" %>
        <div class= "user-info">
             <h1><%=@trip.user.first_name%> <%=@trip.user.last_name%><h1>
             <h3><%=@trip.user.country%> <%=@trip.user.city%><h3>
        </div>
    </div>
    <div class="trip-div-container">
        <div class="trip-div">
             <div class= "single-line-trip">
                   <h2>Trip Name<h2>
                   <h3><%=@trip.name%></h3>
             </div> 
             <div class= "single-line-trip">
                   <h2>Trip City<h2>
                   <h3><%=@trip.city%></h3>
             </div> 
             <div class= "single-line-trip">
                   <h2>Places<h2>
                   <h3><%=@trip.places%></h3>
             </div> 
             <div class= "single-line-trip">
                   <h2>Points Of Interests<h2>
                   <h3><%@trip.points_of_interest%></h3>
             </div> 

        </div>
        <div class="trip-div">
        <div class= "single-line-trip">
                   <h2>Date and Time<h2>
                   <h3><%@trip.time%></h3>
             </div> 
            <div class= "single-line-trip">
                   <h2>Duration<h2>
                   <h3><%=@trip.duration%></h3>
             </div> 
        </div>
    </div>
    <div calss="link-btns">
        <%= link_to  "View", homes_guideprofile_path(:id => @trip.user.id),class:"link-to" %>
        <%= link_to  "Book", bookings_new_path(:id => @trip.id, :user_id => current_user.id),class:"link-to"%>
        <%= link_to 'Edit', trips_edit_path(:id => @trip.id),class:"link-to" %>
        <%= link_to  "Delete", trip_path(@trip) ,method: :delete%>
    </div>
</div>

